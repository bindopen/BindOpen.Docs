{
  "metadata": [
    {
      "src": [
        {
          "files": [
            "**/BindOpen.*.dll"
          ],
          "exclude": [ "**/bin/**", "**/obj/**" ],
          "src": "../docs/api"
        }
      ],
      "dest": "api",
      "disableGitFeatures": false,
      "disableDefaultFilter": false,
      "shouldSkipMarkup": true,
      "properties": {
        "TargetFramework": "netstandard2.0"
      }
    }
  ],
  "build": {
    "sitemap": {
      "baseUrl": "https://docs.bindopen.org",
      "priority": 0.1,
      "changefreq": "monthly",
      "fileOptions": {
        "**/api/**.yml": {
          "priority": 0.3
        }
      }
    },
    "content": [
      {
        "files": [
          "../api/**.yml",
          "../api/index.md"
        ]
      },
      {
        "files": [
          "../docs/articles/**.md",
          "../docs/articles/**/toc.yml",
          "toc.yml",
          "*.md"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "../docs/images/**"
        ]
      }
    ],
    "overwrite": [
      {
        "files": [
          "../docs/apidoc/**.md"
        ],
        "exclude": [
          "obj/**",
          "../_site/**"
        ]
      }
    ],
    "dest": "../_site",
    "globalMetadata": {
      "_appTitle": "BindOpen Documentation",
      "_appFooter": "Copyright © 2010-2019 BindOpen - All rights reserved.",
      "_appLogoPath": "../docs/images/logo_bindopen.png",
      "_appFaviconPath": "../docs/images/favicon_bdo.png",
      "_enableSearch": false,
      "_disableNavbar": false,
      "_disableBreadcrumb": false,
      "_disableToc": false,
      "_gitContribute": {
        "repo": "https://https://github.com/bindopen/BindOpen.Framework",
        "branch": "master"
      }
    },
    "globalMetadataFiles": [],
    "fileMetadataFiles": [],
    "template": [
      "statictoc"
    ],
    "postProcessors": [],
    "markdownEngineName": "markdig",
    "noLangKeyword": false,
    "keepFileLink": false,
    "cleanupCacheHistory": false,
    "disableGitFeatures": true
  }
}