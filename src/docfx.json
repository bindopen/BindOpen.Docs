{
  "metadata": [
    {
      "src": [
        {
          "files": [
            "**/bindopen/BindOpen.*.dll",
            "**/bindopen.databases/BindOpen.Databases.*.dll"
          ],
          "exclude": [ "**/bin/**", "**/obj/**" ],
          "src": "../docs/code/comments"
        }
      ],
      "dest": "bin/out/api",
      "disableGitFeatures": false,
      "disableDefaultFilter": false,
      "shouldSkipMarkup": true,
      "properties": {
        "TargetFramework": "netstandard2.1"
      }
    }
  ],
  "build": {
    "sitemap": {
      "baseUrl": "https://docs.bindopen.org",
      "priority": 0.1,
      "changefreq": "monthly",
      "fileOptions": {
        "**/api/**.yml": {
          "priority": 0.3
        }
      }
    },
    "content": [
      {
        "files": [
          "**/*.md",
          "**/*.yml"
        ],
        "src": "../docs/articles",
        "dest": "articles"
      },
      {
        "files": [
          "**.yml"
        ],
        "src": "bin/out/api",
        "dest": "api"
      },
      {
        "files": [
          "**/*.md",
          "**/*.yml"
        ],
        "src": "../docs/code/comments",
        "dest": "api"
      },
      {
        "files": [
          "**/*.md",
          "**/*.yml"
        ],
        "src": "../docs/code/notes",
        "dest": "notes"
      },
      {
        "files": [
          "toc.yml",
          "*.md"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "**"
        ],
        "src": "../docs/images",
        "dest": "images"
      },
      {
        "files": [
          "**/*.xsd"
        ],
        "src": "../docs/code/xsd/bindopen",
        "dest": "xsd"
      }
    ],
    "dest": "bin/out/_site",
    "globalMetadata": {
      "_appTitle": "BindOpen Documentation",
      "_appFooter": "Copyright © 2010-2020 BindOpen - All rights reserved.",
      "_appLogoPath": "images/logo_bindopen.png",
      "_appFaviconPath": "images/favicon_bdo.png",
      "_enableSearch": false,
      "_disableNavbar": false,
      "_disableBreadcrumb": false,
      "_disableToc": false,
      "_gitContribute": {
        "repo": "https://github.com/bindopen/BindOpen",
        "branch": "master"
      }
    },
    "globalMetadataFiles": [],
    "fileMetadataFiles": [],
    "template": [
      "statictoc"
    ],
    "postProcessors": [],
    "markdownEngineName": "markdig",
    "noLangKeyword": false,
    "keepFileLink": false,
    "cleanupCacheHistory": false,
    "disableGitFeatures": true
  }
}